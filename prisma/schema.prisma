generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum FavoriteType {
  SITES
  INSPIRATIONS
  ARTICLES
  TUTORIALS
  TOOLS
}

model User {
  id            String   @id @default(uuid())
  username      String
  email         String   @unique
  password_hash String
  created_at    DateTime @default(now())
  updated_at    DateTime @updatedAt

  favorites Favorite[]

  @@map("users")
}

model Favorite {
  id          String       @id @default(uuid())
  title       String
  description String
  url         String
  type        FavoriteType
  created_at  DateTime     @default(now())
  updated_at  DateTime     @updatedAt

  user_id String
  User    User   @relation(fields: [user_id], references: [id])

  tags FavoriteTag[]

  @@map("favorites")
}

model Tag {
  id         String   @id @default(uuid())
  name       String   @unique
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  favorites FavoriteTag[]

  @@map("tags")
}

model FavoriteTag {
  favorite_id String
  tag_id      String

  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  favorite Favorite @relation(fields: [favorite_id], references: [id])
  tag      Tag      @relation(fields: [tag_id], references: [id])

  @@id([favorite_id, tag_id])
  @@map("favorite_tags")
}
